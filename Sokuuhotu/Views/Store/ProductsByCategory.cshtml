@model IEnumerable<BAW.Models.Product>
@{
    ViewBag.Title = "ProductsByCategory";
    Layout = "~/Views/Shared/_BAWLayout.cshtml";
}


<div id="tg-innerbanner" class="tg-innerbanner tg-haslayout">
    <figure data-vide-bg="poster: images/slider/img-01.jpg" data-vide-options="position: 50% 50%">
        <figcaption>
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="tg-bannercontent">

                            <b> Home / Products  </b>

                        </div>
                    </div>
                </div>
            </div>
        </figcaption>
    </figure>

</div>



<div class="container">
    <div class="row">
        <div id="tg-twocolumns" class="tg-twocolumns">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="tg-pagehead">
                    <h1>Results </h1>
                    <p>@Model.Count()  </p>
                </div>
            </div>

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="tg-content" class="tg-content">
                    <div class="tg-contenthead">
                        <div class="tg-sortandview">
                            <div class="tg-sortby">
                                <strong>Sort by:</strong>
                                <div class="tg-select">
                                    <select>
                                        <option value="Most Recent">Most Recent</option>
                                        <option value="Most Recent">Most Recent</option>
                                        <option value="Most Recent">Most Recent</option>
                                    </select>
                                </div>
                            </div>
                            <div class="tg-views">
                                <strong>View As Grid</strong>
                                <ul>
                                    <li class="tg-active"><a href="javascript:void(0);"><i class="fa fa-th-large"></i></a></li>
                                    <li><a href="javascript:void(0);"><i class="fa fa-reorder"></i></a></li>
                                </ul>
                            </div>

                        </div>

                    </div>
                    <div class="tg-ads">
                        <div class="row">

@foreach (var item in Model)
{

                            <div class="col-xs-6 col-sm-12 col-md-6 col-lg-4 tg-verticaltop">
                                <div class="tg-ad tg-verifiedad">

                                    <figure>
                                        @*<span class="tg-themetag tg-featuretag">featured</span>*@
                                        <a href="@Url.Action("ProductDetails","Store",new {Id = item.ProductId })"><img src="~/Images/ads/img-01.jpg" alt="image description"></a>

                                    </figure>
                                    <div class="tg-adcontent">
                                        <ul class="tg-productcagegories">
                                            <li><a href="@Url.Action("ProductsByCategory","Store",new {categoryId = item.CategoryId })">@item.Category.CategoryName</a></li>
                                        </ul>
                                        <div class="tg-adtitle">
                                            <h3 style="text-align:center"><a href="@Url.Action("ProductDetails","Store",new {Id = item.ProductId })">@item.ProductName</a></h3>
                                        </div>
                                        @*<div class="tg-adprice"><h4>$200</h4></div>*@


                                        <span><i class="far fa-clock"></i><b>4 hours Ago</b></span>

                                        <div class="tg-phonelike">
                                            <small>Details </small>
                                            @*@Html.ActionLink("ProductDetails", "Store",new { proId = item.ProductId },new {@class="tg-like tg-liked fa fa-arrow-right" })*@
                                            <a href="@Url.Action("ProductDetails","Store",new {Id = item.ProductId })">
                                                <span class="tg-like tg-liked"><i class="fa fa-arrow-right"></i></span>

                                            </a>
                                        </div>
                                    </div>


                                </div>
                            </div>

}
                        
                        
                         </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


